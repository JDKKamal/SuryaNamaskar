<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/medium">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/appIvUserProfile"
                android:layout_width="@dimen/iv_app_logo"
                android:layout_height="@dimen/iv_app_logo"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/username" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_edittext"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextSemiBoldSizeSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_username" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/appEdtUserName"
                    style="@style/styleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@drawable/username"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium"
                android:background="@drawable/style_edittext"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextSemiBoldSizeSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_mobile" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/appEdtMobile"
                    style="@style/styleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@drawable/mobile"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium"
                android:background="@drawable/style_edittext"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextSemiBoldSizeSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_pincode" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/appEdtPinCode"
                    style="@style/styleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@drawable/mobile"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium"
                android:background="@drawable/style_edittext"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextSemiBoldSizeSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_address" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/appEdtAddress"
                    style="@style/styleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@drawable/mobile"
                    android:inputType="textMultiLine"
                    android:lines="3" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/appBtnSubmit"
                style="@style/styleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regularSmall"
                android:text="@string/btn_submit" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>