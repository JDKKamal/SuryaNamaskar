<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llQuestionListFAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginRight="@dimen/small"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvQuestionNoFAQElement"
            style="@style/TextLightSizeMedium"
            android:padding="@dimen/tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="No." />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tiny"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appTvQuestion"
                style="@style/TextSemiBoldSizeMedium"
                android:layout_width="match_parent"
                android:padding="@dimen/tiny"
                android:layout_height="wrap_content"
                tools:text="Question" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appTvAnswer"
                style="@style/TextRegularSizeMedium"
                android:layout_width="match_parent"
                android:padding="@dimen/tiny"
                android:layout_height="wrap_content"
                tools:text="Answer" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appIvArrowDown"
            android:layout_width="@dimen/vector"
            android:layout_height="@dimen/vector"
            app:srcCompat="@drawable/ic_arrow_down" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small"
        android:layout_weight="0.5"
        android:background="@color/color_line_adapter" />

</LinearLayout>
